@model JSandwiches.Models.DTO.UsersDTO.LoginAppUserDTO

@{
    ViewData["Title"] = "Login";
}
<head>
    <link href="~/css/login.css" rel="stylesheet" asp-append-version="true" />
</head>
<div class="center-container login-container">
    <img id="background" src="/images/branding/spicy chirps.jpg" />
    <form asp-action="Login" class="center-container-col">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       <a asp-controller="Home" asp-action="Index"><img src="/images/branding//Johnson’s Sandwiches.png" width="170" /></a>
        <div class="center-container-col input-fields">
            <div class="form-floating">
                <input asp-for="UserName" class="form-control" id="floatingInput" placeholder="User Name" />
                <label asp-for="UserName" for="floatingInput"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="password" asp-for="Password" class="form-control" placeholder="" />
                <label asp-for="Password" class="control-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        @if (ViewBag.LoginError != null)
        {

            <h4 class="text-danger mt-3">@ViewBag.LoginError</h4>

        }
        <div class="center-container btn-area">
            <a href="#">Forgot Password</a>
            <button type="submit" class="login-btn2">Login</button>
        </div>
        <p class="register">Don't have an account? Sign up <span><a asp-controller="Customer" asp-action="CustomerCreate">here</a></span></p>
    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
