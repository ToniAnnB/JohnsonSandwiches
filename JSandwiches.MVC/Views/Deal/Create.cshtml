@model JSandwiches.Models.DTO.SpecialFeaturesDTO.DealDTO

@{
    ViewData["Title"] = "Deal";
}

<head>
    <link href="~/css/upsert.css" rel="stylesheet" asp-append-version="true" />
</head>


<div class="content-container">
    <div class="form-header center-container-col">
        <h1>Creation Form</h1>
        <p>Please fill in the form below</p>
    </div>

    <form asp-action="Create" class="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <fieldset>
            <legend></legend>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="button-group center-container">
                <button asp-action="Index" class="button cancel">Cancel</button>
                <button type="submit" class="button create">Create</button>
            </div>
        </fieldset>
    </form>
</div>








@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
