@model JSandwiches.MVC.Models.ViewModels.DealSpecificsVM

@{
    ViewData["Title"] = "Deal Specifics";
}


<head>
    <link href="~/css/upsert.css" rel="stylesheet" asp-append-version="true" />
</head>


<div class="content-container">
    <div class="form-header center-container-col">
        <h1>Update Form</h1>
        <p>Please fill in the form below</p>
    </div>

    <form asp-action="Edit" class="form">
        <fieldset>
            <legend></legend>

            <div class="form-group">
                <div class="form-group">
                    <input asp-for="DealSpecifics.Id" class="form-control" hidden />
                </div>
                <label class="control-label">Deal Name</label>
                <select asp-for="DealSpecifics.DealID" asp-items="@Model.ddlDeals">
                    <option selected disabled>Select Deal Name</option>
                </select>
                <span asp-validation-for="DealSpecifics.DealID" class="text-danger"></span>
            </div>
            <span>
                <div class="form-group">
                    <label asp-for="DealSpecifics.StartDate" class="control-label"></label>
                    <input asp-for="DealSpecifics.StartDate" class="form-control" />
                    <span asp-validation-for="DealSpecifics.StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DealSpecifics.EndDate" class="control-label"></label>
                    <input asp-for="DealSpecifics.EndDate" class="form-control" />
                    <span asp-validation-for="DealSpecifics.EndDate" class="text-danger"></span>
                </div>
            </span>
            <div class="form-group">
                <label asp-for="DealSpecifics.Percentage" class="control-label"></label>
                <input asp-for="DealSpecifics.Percentage" class="form-control" />
                <span asp-validation-for="DealSpecifics.Percentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Upload Image</label>
                <input asp-for="DealSpecifics.ImagePath" class="form-control" readonly>
                <span asp-validation-for="DealSpecifics.ImagePath" class="text-danger"></span>
            </div>
            <div class="button-group center-container">
                <button asp-action="Index" class="button cancel">Cancel</button>
                <button type="submit" class="button create">Edit</button>
            </div>
        </fieldset>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

