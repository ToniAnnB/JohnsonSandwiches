                    @foreach (var menuItem in Model)
                    {
                        <div class="item center-container-col">
                            <div class="image">
                                <img src="@menuItem.ImagePath"/>
                            </div>
                            <div class="content center-container-col">
                                <h5>@menuItem.Title</h5>
                                <div class="item-info center-container-col">
                                    <p><b>Price:</b> @menuItem.Price</p>
                                    <p><b>Calories:</b> 320-420 cal</p>
                                </div>
                                <div class="item-btns center-container">
                                    <a asp-controller="Order" asp-action="ItemDetails" asp-route-id="@menuItem.Id" class="order2-btn btn-orange">Details</a>
                                    <a asp-controller="Order" asp-action="OrderItem" asp-route-id="@menuItem.Id" class="order2-btn btn-red">Order</a>
