@model IEnumerable<JSandwiches.Models.DTO.FoodDTO.MenuItemDTO>
@{
    ViewData["Title"] = "Orders";
    ViewBag.TabName = "";
}
<head>
    <link href="~/css/menu.css" rel="stylesheet" asp-append-version="true" />
</head>

<div class="menu-container center-container">
    <div class="menu-content center-container-col">
        <div class="menu-banner center-container">
            <div class="banner-img">
                <img src="~/images/branding/veggie smash.jpg" />
                <div class="banner-overlay">
                </div>
                <div class="today-item center-container-col">
                    <h3>SANDWICH OF THE DAY</h3>
                    <div class="today-info">
                        <h5>Veggie Smash</h5>
                        <p>$12.00</p>
                    </div>
                    <div class="today-btn center-container">
                        <a href="#" class="detail-btn">Details</a>
                        <a href="#" class="order-btn">Order</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="menu-bottom center-container-col">
            <div class="search-input-group">
                <input type="text" name="query" placeholder="Search..." class="search-input" />
                <button type="submit" class="search-button">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <div class="bot-bot  center-container">
