                            <option value="red-meat">Red Meat</option>
                        </select>

                        <select>
                            <option value="" selected disabled>Subcategory</option>
                            <option value="chicken">Chicken</option>
                            <option value="beef">Beef</option>
                        </select>

                        <button class="search-btn">Filter</button>
                    </div>
                </div>
