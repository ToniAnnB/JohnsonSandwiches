@model JSandwiches.MVC.Models.ViewModels.SubCategoryVM

@{
    ViewData["Title"] = "SubCategory";
}


<head>
    <link href="~/css/upsert.css" rel="stylesheet" asp-append-version="true" />
</head>


<div class="content-container">
    <div class="form-header center-container-col">
        <h1>Update Form</h1>
        <p>Please fill in the form below</p>
    </div>
    @if (TempData["PostResponse"] != null)
    {
        <div class="alert alert-danger mt-4">
            <h1>Failure</h1>
            <p>Process Failed. Please try a later</p>
        </div>
    }

    <form asp-action="Edit" class="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <fieldset>
            <legend></legend>
            <input asp-for="SubCategory.Id" hidden />
            <div class="form-group">
                <label class="control-label">Category Name</label>
                <select asp-for="SubCategory.CategoryID" asp-items="@Model.ddlCategory">
                    <option selected disabled>Select Category Name</option>
                </select>
                <span asp-validation-for="SubCategory.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubCategory.Title" class="control-label"></label>
                <input asp-for="SubCategory.Title" class="form-control" />
                <span asp-validation-for="SubCategory.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubCategory.Description" class="control-label"></label>
                <input asp-for="SubCategory.Description" class="form-control" />
                <span asp-validation-for="SubCategory.Description" class="text-danger"></span>
            </div>
            <div class="button-group center-container">
                <button asp-action="Index" class="button cancel">Cancel</button>
                <button type="submit" class="button create">Edit</button>
            </div>
        </fieldset>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
